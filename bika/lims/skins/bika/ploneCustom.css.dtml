    visibility: hidden;
}

.select_sample {
    color: &dtml-linkColor;;
    font-weight:bold;
    cursor: pointer;
}

.copyButton{
    border: 0;
	cursor: pointer;
}

.deleteAttachmentButton {
    border: 0;
	cursor: pointer;
}

.deleteSampleButton{
    border: 0;
	cursor: pointer;
}

.link {
    color: &dtml-linkColor;;
    cursor: pointer;
}
.center{
    text-align: center;
}


/***********************
* worksheets
*/

