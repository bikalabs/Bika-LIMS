<dtml-with base_properties>
<dtml-call "REQUEST.set('portal_url', portal_url())">


/*
 * Remove boring whitespace in sunburst
 */

html body{
    font: 100% "Lucida Grande",Verdana,Lucida,Helvetica,Arial,sans-serif;
}

table {
    font-size: 100%;
}
#portal-breadcrumbs{
    margin-bottom: .3em;
}
.searchSection{
	display: none;
}
#portal-logo{
	margin: 10px 0 10px 0;
}
#content {
    line-height: 1em;
    margin: 0 0.25em 1em;
}
#content h1 {
    margin-top: .1em;
}
/* overwrite sunburst special display of description fields */
/*#content .field textarea[name$=".description"],  */
#archetypes-fieldname-description textarea#description {
    font-style: normal;;
    color: &dtml-inputFontColor;;
    font-size: &dtml-fontSmallSize;;
    font-weight: normal;
}
dl.portalMessage {
    margin-top:0;
}

dl.portlet ul.navTreeLevel0 > .navTreeItem {
    border-bottom: 0.1em dotted #EEEEEE;
    padding: 0.25em 0.25em;
}
dl.portlet ul.navTreeLevel1 .navTreeItem {
    padding: 0.25em 0.25em;
}
dl.portlet ul.navTree .navTreeCurrentItem {
    background-color: #ddd;
    border-left: 1em solid #ddd;
    margin-left: -0.25em;
    margin-right: -0.25em;
}
table.invisible td, table.invisible th, table.plain td, table.plain th, table.listing td, table.listing th {
    padding-bottom: 0.25em;
    padding-left: 0.5em;
    padding-right: 0.5em;
    padding-top: 0.25em;
    vertical-align: top;
}
.nomargin {margin:0;}
.nopadding {padding:0;}
#portal-globalnav li a {
	padding: 0.2em 1em 0.2em 1em ! important;
	min-width:2em;
	font-size: 90%;
}
dl.portlet ul.navTreeLevel0 > .navTreeItem {
	line-height: 1.5em;
}
#content a:hover, dl.portlet a {
  color: &dtml-linkColor; !important;
  text-decoration:none;
}
#content a:hover, dl.portlet a:hover {
  color: &dtml-linkColor; !important;
  text-decoration:none;
}
#content-core {
  margin-top:.5em !important;
}
.folderlisting-main-table {
  margin-top:.5em;
}

/************ columns.css overrides */


/* Pretty table classes
*/
.three_column_table td {
    width:33% !important;
}
.two_column_table td {
    width:50% !important;
}

div.width-1\3a 4 { width: 16.5%; } /* .width-1:4 */
div.width-3\3a 4 { width: 80.2%; } /* .width-1:4 */
div.position-1\3a 4 {margin-left:    -81.5%;} /* .position-1:4 */

div.position-3\:4 {
    margin-left: -16.855%;
	width:81%
}
div.width-3\:4 {
	width:81.2%
}
div.width-1\:2 {
    width: 64.4% !important;
}
div.width-1\:4 {
    width: 15.75% !important;
}
div.position-1\:4 {
    margin-left: -82.25%;
}

#plone-contentmenu-workflow .state-cancelled {
    background-color: red;
    border: 0.1em solid red;
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    color: White !important;
    padding: 0 0.5em;
}
#plone-contentmenu-workflow .state-inactive {
    background-color: red;
    border: 0.1em solid red;
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    color: White !important;
    padding: 0 0.5em;
}
#listing-table .state-cancelled {
	background-color: #FFC8C8  !important;
	color: #222 !important;
}
#listing-table .state-inactive {
	background-color: #FFC8C8  !important;
	color: #222 !important;
}
#listing-table .state-due,
#listing-table .state-sample_due {
	color: #2bb800;
}
#listing-table .state-empty-worksheet {
	color: #b1b1b1;
}
#listing-table .state-empty-worksheet .empty {
	font-weight: bold;
}
.state-empty {
	background-color: #FFC8C8  !important;
	color: #222 !important;
	vertical-align:middle !important;
	padding:5px;
	border-bottom:1px solid #ddd;
}
a.state-visible  {
    color:#205C90 !important;
}

#listing-table td {
	vertical-align:middle;
}
.bika-listing-table {
    font-size: 100%;
}
table.listing {
  border-left:0;
}
table.listing tr {
  border-left: 1px solid #dddddd;
}


.template-analysisrequests .bika-listing-table {
    font-size: 90% !important;
}

a .navTreeCurrentNode .navTreeFolderish {
  border-radius: .25em;
  background: #eee;
  border:1px solid #ddd !important;
  padding:2px 5px 2px 5px !important;
}
a .navTreeCurrentItem {
  border-radius: .25em;
  background: #eee;
  padding:2px 5px 2px 5px !important;
}

td.Result,
td.getRequestID,
td.Title,
td.ID {
  white-space:nowrap !important;
}

.getRequestID {
  white-space:nowrap !important;
}

.documentActions{
  float:right;
}

.content_add_link {
    margin-right: .5em;
    font-size: 50%;
    border:0 !important;
    vertical-align: middle !important;
	font-weight:normal;
	letter-spacing: 0;
}

.review_state_td {
	background-color:#fff !important;
	border-right:0 !important;
	border-left:0 !important;
	padding:0px 0px 0px 0px !important;
}
.review_state_selector {
  margin:0 0 .5em 0 !important;
  background: #fff;
  padding:5px 2px 5px 2px !important;
}

.review_state_selector a{
  border-radius: .25em;
  background: #fff;
  text-decoration:none;
  font-weight:normal;
  padding:2px 5px 2px 5px !important;
}

.review_state_selector a:hover{
  border-radius: .25em;
  background: #eee;
  text-decoration:none;
  font-weight:normal;
  padding:2px 5px 2px 5px !important;
}

.review_state_selector .selected{
  border-radius: .25em;
  background: #eee;
  border:1px solid #ddd !important;
  font-weight:bold;
  padding:2px 5px 2px 5px !important;
}
.review_state_selector .selected:hover{
  border-radius: .25em;
  background: #eee;
  border:1px solid #ddd !important;
  font-weight:bold;
  padding:2px 5px 2px 5px !important;
}

.specification {
  border-radius: .25em;
  background: #fff;
  font-weight:bold;
  padding:2px 5px 2px 5px !important;
}

.specification.selected {
  border-radius: .25em;
  background: #eee;
  border:1px solid #ddd !important;
  font-weight:bold;
  padding:2px 5px 2px 5px !important;
}

dt.attachments {
    color: &dtml-linkColor;;
    font-weight:bold;
	font-family: "Helvetica Neue",Arial,FreeSans,sans-serif;
	font-size:1.25em !important;
	color: #444444 !important;
    cursor: pointer !important;
	line-height:1em !important;
}

.workflow_action_buttons {
  margin-left: 1.5em;
}
.workflow_action_button {
}

.barcode {
  whitespace:nowrap;
}


dl.portlet dt, div.portletAssignments div.portletHeader {
    background-color: #ddd;
    border:d0d0d0;
    line-height: normal;
    padding: .25em .25em .25em .3em;
    color: #666666 !important;
    font: bold 1.1em "Helvetica Neue",Arial,FreeSans,sans-serif;
    margin-left: 0;
}

th.collapsed {
    background: #DDDDDD url(treeCollapsed.png) no-repeat 6px 50% !important;
    cursor:pointer !important;
	padding-left:20px !important;
    text-color: &dtml-linkColor; !important;
    font-weight:bold !important;
	border:1px solid #CCCCCC !important;
}

th.expanded {
    background: #DDDDDD url(treeExpanded.png) no-repeat 6px 50% !important;
    cursor:pointer !important;
	padding-left:20px !important;
    text-color: &dtml-linkColor; !important;
    font-weight:bold !important;
	border:1px solid #CCCCCC !important;
}


/*
 * Analysis Request tables
 */

table.analysisrequest {
	border-top: 1px solid #dddddd;
}

table.analysisrequest.add td {
    text-align: center;
	border-bottom:1px solid #eee;
}
table.analysisrequest.edit td {
    text-align: center;
	border-bottom:1px solid #eee;
}
table.analysisrequest.add td.ar_column {
    width:8em;
}

table.analysisrequest .pointofcapture th {
	padding-top:5px;
    background: #fff;
    border-left: 0;
	border-right:0;
    background: #fff;
	font-size:1.1em;
}

.ARProfile {
  width: 95%;
}

/* silly table border games */
table.analysisrequest .pointofcapture tr{ border-left: 0; }
table.analysisrequest { border-left: 0; }
table.analysisrequest tr { border-left: 1px solid #DDDDDD; }
table.analysisrequest .topborder { border-top:1px solid #DDDDDD; }
table.analysisrequest .noleftborder { border-left: 0; }
table.analysisrequest th { border-color: #DDDDDD; }

table.analysisrequest th.analysiscategory.collapsed{
    background: #DDDDDD url(treeCollapsed.png) no-repeat 6px 50%;
